    <div class="container">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>

    <div id="landing-header" class="container d-flex align-items-center">
		<div class="m-auto p-3 text-center">
			<h1 class="m-auto p-3">Welcome to YelpCamp</h1>
			<h4 class="text-white-50 mx-auto mt-2 mb-5">Small collections of campsites</h4>
