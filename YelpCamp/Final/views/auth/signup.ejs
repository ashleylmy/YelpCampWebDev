<%- include("../partials/header") %>

<div id="authPage" class="">
<div class="signin-container justify-content-center">
	<div class="card d-flex justify-content-cente">
       <div class="card-header">		  
			<h3>Sign UP</h3>
			<div class="d-flex justify-content-end social_icon">
				<span><i class="fab fa-facebook-square"></i></span>
				<span><i class="fab fa-google-plus-square"></i></span>
				<span><i class="fab fa-twitter-square"></i></span>
			</div>
	   </div>
		<div class="card-body">
            <form class="form-auth" action="/signup" method="post">
			<div class="input-group form-group">
				<div class="input-group-prepend">
					<span class="input-group-text"><i class="fas fa-user"></i></span>
				</div>
					<input type="text" id="inputUsername" class="form-control" name="username" placeholder="Username" required autofocus>

				</div>
		    <div class="input-group form-group">
				<div class="input-group-prepend">
					<span class="input-group-text"><i class="fas fa-key"></i></span>
			</div>
			   <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
				</div>
					<div class="align-items-center admin">
						<div id="checkboxdiv" style="display:none">
							<input class="form-control" type="text" name="adminCode" placeholder="admin code">
						</div>
					</div>
              <button class="btn btn-lg btn-primary float-right" type="submit">Sign Up</button>
            </form>
		</div>
		<div class="card-footer ">
			<div class="d-flex justify-content-center links">
				Already have an account? <a href="/signin">Sign In</a>
			</div>
			<div class="d-flex justify-content-center">
			<a href="/campgrounds">Go Back</a>
		</div>
		</div>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>