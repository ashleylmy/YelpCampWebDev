<%- include("../partials/header") %>

<div class="container">
	<div class="col">
		<h1 style="text-align: center">
			Edit <%= campground.name%>
		</h1>
		 <div style="width: 30%; margin: 25px auto;">
		<form action="/campgrounds/<%=campground.id%>?_method=PUT" method="POST">
			<input class="form-control" type="text" name= "campground[name]" value="<%= campground.name%>">
			<input class="form-control" type="text" name= "campground.image" value="<%= campground.image%>">
			<textarea class="form-control" name="campground.description"><%= campground.description%></textarea>
			<button class="btn btn-outline-secondary btn-block" style="margin: 20px auto;">
				Submit
			</button>
		</form>
		
		<div style="margin: 20px auto;">
			<a href="/campgrounds">
			Go back
			
			</a>
		</div>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>
