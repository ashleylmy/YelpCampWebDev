<%- include("partials/header") %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
		<h1>
			Welcom to YelpCamp
		</h1>
		<p>
			some random campgrounds
		</p>
		<h3>
		<a class="btn btn-primary btn-large" href="campgrounds/new">
			Add New</a>
		</h3>
		</div>
	</header>



	<div class="row d-flex flex-wrap" >
		<% campgrounds.forEach(function(campground){ %>
		<div class="col-md-3 col-sm-6">
			<div class="card" >
				<img class="card-img-top" src="<%= campground["image"] %>" alt="Card image cap">
				<div class="card-body">
					<h5 class="card-title"><%=campground["name"]%></h5>
					<p>some description</p>
					<a class="btn btn-danger btn-sm">
						Like
					</a>
					<a href="/campgrounds/<%= campground["_id"]%>" class="btn btn-success btn-sm">
						More Info
					</a>
				</div>				
			</div>
			
		</div>

		<% })%>
	
	</div>
</div>


<%- include("partials/footer") %>