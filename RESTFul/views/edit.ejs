<%- include("partials/header") %>

<div class="ui main text container segment">	
	<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="ui form">
			<div class="field" >
			<label>Blog Title</label>
			<input type="text" name="blog[title]" value="<%= blog.title%>">
			</div>
		</div>
		<div class="ui form">
			<div class="field" >
			<label>Image url</label>
			<input type="text" name="blog[image]" value="<%= blog.image%>">
			</div>
		</div>
		<div class="ui form">
			<div class="field">
				<label>Text</label>
			<textarea name="blog[body]"><%= blog.body%></textarea>
		</div>
		</div>
		<button class="ui basic button" type="submit">
			Save
		</button>
	</form>
</div>

<%- include("partials/footer") %>