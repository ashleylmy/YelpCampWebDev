<%- include("partials/header") %>

<div class="ui main container segment">	
	<div class="ui huge header">
		Blog List
	</div>
	<% blogs.forEach(function(blog){ %>
	<div class="ui divided items">
			<div class="image">
				<img src="<%= blog.image %>">
			</div>
			<div class="content">
				<div class="header">
				<h2>
					<%= blog.title %>
				</h2>
				</div>
			
			<div class="body">
				<p>
					<%- blog.body.substring(0, 100) %> ...
				</p>
			</div>
			<div class="created">
				<a href="blogs/<%=blog._id%>" class="ui floated basic button">
				Read More
				</a>
				<span class="right floated">
					<%= blog.create.toDateString() %>
				</span>
				</div>
			</div>
	</div>
	<% }) %>
</div>
		
  
	


<%- include("partials/footer") %>